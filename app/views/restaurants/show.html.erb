<h2><%= @restaurant.name %></h2>

<h5><%= @restaurant.address %></h5>
<h5><%= @restaurant.phone_number %></h5>
<h5><%= @restaurant.category %></h5>
<% @restaurant.reviews.each do |review| %>
<h5><%= review.content %> <%= review.rating %></h5>
<% end %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-3" %>

<%= link_to 'Go back', restaurants_path, class: "btn btn-danger mt-3" %>
